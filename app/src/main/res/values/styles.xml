<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryDark">@color/white</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- margin_start_end_20-->
    <style name="marginLeftRight_20">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="plainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_plain_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="titleText" parent="plainText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="itemText" parent="plainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="itemText2" parent="plainText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="itemText_small" parent="plainText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tinyText" parent="plainText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_white_gray</item>
    </style>

    <style name="smellTypeText" parent="plainText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_bright_gray</item>
    </style>

    <style name="myPageText" parent="plainText">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="navigationItemText" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_plain_text</item>
    </style>

    <style name="intensityButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="smellTypeButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/color_plain_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- register_title_txt-->
    <style name="hint_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/under_line</item>
        <item name="android:textColorHint">@color/under_line</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- register_title_txt-->
    <style name="myPageHintEditText" parent="hint_edit_text">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- register_star_txt-->
    <style name="star_mark" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:text">@string/star_text</item>
        <item name="android:textColor">@color/star_mark</item>
    </style>

    <style name="GenderRadioGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/toggle_selected_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>