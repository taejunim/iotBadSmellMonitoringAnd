<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryDark">@color/white</item>-->

    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- margin_start_end_20-->
    <style name="margin_start_end_20">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- margin_start_end_20-->
    <style name="margin_left_right_20">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- margin_bottom_10-->
    <style name="margin_bottom_10">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- margin_bottom_20-->
    <style name="margin_bottom_20">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- margin_bottom_20-->
    <style name="login_text_size">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- register_title_txt-->
    <style name="plain_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_plain_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- register_title_txt-->
    <style name="hint_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/under_line</item>
        <item name="android:textColorHint">@color/under_line</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- register_star_txt-->
    <style name="star_mark" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:text">@string/star_text</item>
        <item name="android:textColor">@color/star_mark</item>
    </style>

    <style name="GenderRadioGroup" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/toggle_selected_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>