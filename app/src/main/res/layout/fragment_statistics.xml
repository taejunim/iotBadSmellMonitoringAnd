<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/statistics_status_text"
            style="@style/plainText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/statistics_current_status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statistics_total_count"
            style="@style/itemText2"
            android:layout_toRightOf="@+id/statistics_status_text"
            android:layout_alignBaseline="@+id/statistics_status_text"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:text="(총 악취 접수 : - 건)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/statistics_status_text"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:weightSum="3">

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"
                        android:text="@string/statistics_sensing_count_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"
                        android:text="@string/statistics_sensing_ratio_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"
                        android:text="@string/statistics_sensing_intensity_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/color_blue"
                        android:textStyle="bold"
                        android:text="@string/statistics_sensing_type_text" />

                </TableRow>

                <TableRow
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/statistics_sensing_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="- 건" />

                    <TextView
                        android:id="@+id/statistics_sensing_ratio"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="- %" />

                    <TextView
                        android:id="@+id/statistics_sensing_intensity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="-" />

                    <TextView
                        android:id="@+id/statistics_sensing_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="-" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </TableLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>